<header>
  <!-- image variables -->
  <% logo = image_tag("logo.png", :alt => "Home", :class => "round") %>
  <% about = image_tag("about.png", :alt => "About", :class => "round") %>
  <% contact = image_tag("contact.png", :alt => "Contact", :class => "round") %>

  <!-- home page -->
  <%= link_to logo, home_path %>

  <div class="round">
    <!-- about page -->
    <%= link_to about, about_path %>

    <!-- dash separator -->
    <%= image_tag("dash.png", :alt => "-", :class => "round") %>

    <!-- contact page -->
    <%= link_to contact, contact_path %>

  </div>
</header>
