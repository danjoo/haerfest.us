<h1>Listing images</h1>

<table align="center" border="1" cellpadding="5">
  <tr>
    <th>Image</th>
    <th>Style</th>
    <th>Photo type</th>
    <th>Path</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td>
    <%= image_tag("gallery/"+image.path, :alt => image.path,:class => "round",
                  :height => "10%", :witdh => "10%") %>
    </td>
    <td><%= image.style %></td>
    <td><%= image.photo_type %></td>
    <td><%= image.path %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br /><br />

<%= will_paginate %>

